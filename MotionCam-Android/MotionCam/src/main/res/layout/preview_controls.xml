<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/previewControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:id="@+id/videoRecordingStats"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/memoryUsageText"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/memory_use"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold" />

            <ProgressBar
                android:id="@+id/memoryUsageProgress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="50"/>

            <TextView
                android:id="@+id/freeSpaceText"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/device_storage"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold" />

            <ProgressBar
                android:id="@+id/freeSpaceProgress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/outputFps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                android:text="30\nOUTPUT FPS" />

            <TextView
                android:id="@+id/outputSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                android:text="1 gb\nSIZE" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/videoRecordingBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/videoCropToggle"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="0% / 0%\nCROP" />

            <TextView
                android:id="@+id/videoFrameRateBtn"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                app:layout_constraintLeft_toRightOf="@id/videoCropToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="30\nFPS"/>

            <TextView
                android:id="@+id/videoBinBtn"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                app:layout_constraintLeft_toRightOf="@id/videoFrameRateBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="1x1\nBIN"/>

            <TextView
                android:id="@+id/videoResolution"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.VerySmall.Bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="4000x3000\nOUTPUT"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/processVideoBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@color/acceptAction"
            android:textAppearance="@style/MotionCam.TextAppearance.Small.Bold"
            android:text="@string/manage_videos"/>

        <LinearLayout
            android:id="@+id/widthCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.Small.Bold"
                android:text="W"/>

            <SeekBar
                android:id="@+id/widthCropSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressBackgroundTint="@color/white"
                android:thumbTint="@color/white"
                android:progressTint="@color/white"
                android:max="60"
                android:padding="@dimen/seekBarPadding"
                android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/heightCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/MotionCam.TextAppearance.Small.Bold"
                android:text="H"/>

            <SeekBar
                android:id="@+id/heightCropSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressBackgroundTint="@color/white"
                android:thumbTint="@color/white"
                android:progressTint="@color/white"
                android:max="60"
                android:padding="@dimen/seekBarPadding"
                android:theme="@style/Widget.AppCompat.SeekBar.Discrete"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/settingsBtn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/round_settings_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

